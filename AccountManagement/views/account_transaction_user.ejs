        <!-- page content -->
          <div class="" id='JYXX'>
            <div class="container body">
              <div class="main_container">

                <div class="right_col" role="main">
                  <div class="">

                    <!-- title -->
                    <div class="page-title">
                      <div class="title_left">
                        <h3>
                          用户记录
                        </h3>
                      </div>
                      <div class="title_right">
                        <h1>&nbsp;</h1>
                      </div>
                    </div>
                    <!-- title -->

                    <div class="row">
                      <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                          <div class="x_title">
                            <h2>交易总额：<%= total_account %>元</h2>
                            <ul class="nav navbar-right panel_toolbox">
                              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                              </li>
                              <li><a class="close-link"><i class="fa fa-close"></i></a>
                              </li>
                            </ul>
                            <div class="clearfix"></div>
                          </div>

                          <form class="form-inline" action="/account/transaction" method="POST">               
                          <div class="form-group">日期：&nbsp;</div>
                          <div id="datetimepicker1" class="input-append date form-group" >
                              <input type="text" name = "start_time" placeholder="选择开始日期" value = "<%= search.start_time.toLocaleDateString() ||''%>"></input>
                              <span class="add-on">
                                <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                              </span>
                          </div>

                          <div class="form-group" >&nbsp;&nbsp;-&nbsp;&nbsp; </div>
                          <div id="datetimepicker2"  class="input-append date form-group">
                              <input type="text" name = "end_time" placeholder="选择结束日期" value = "<%= search.end_time.toLocaleDateString() ||''%>"></input>
                              <span class="add-on">
                                <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                              </span>
                          </div>
                          <div style = "margin-top: 20px">
                            金额：&nbsp;
                            <input type="text" name = "low_money" placeholder="请填入金额下限" value = "<%= search.low_money ||''%>"></input>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;
                            <input type="text" name = "upper_money" placeholder="请填入金额上限" value = "<%= search.upper_money ||''%>"></input>
                          </div>
                          <div style = "margin-top: 20px; margin-bottom: 20px">
                            卖家：&nbsp;&nbsp;<input type="text" name = "seller" placeholder="请填入卖家名" value = "<%= search.seller ||''%>"></input>
                          </div>

                          <div class="form-group">信息：&nbsp;</div>
                            <div class="form-group">
                              <select class="selectpicker show-tick" id="myselector" data-size="3" name = "state" value = "2">
                                <option text = "全部状态<">全部状态</option>
                                <option text = "待付款">待付款</option> 
                                <option text = "待商家确认">待商家确认</option>
                                <option text = "已确认">已确认</option>                        
                                <option text = "交易成功">交易成功</option>
                                <option text = "交易关闭">交易关闭</option> 
                                <option text = "待退款">待退款</option>
                                <option text = "已退款">已退款</option>                        
                                <option text = "退款失败">退款失败</option>
                              </select>
                            </div>
                            <input class='btn btn-info btn-large' href='javascript:;' type="submit" value="查询" style = "margin-left : 300px">
                          </form>

                          <div class="x_content">
                            <table id="datatable" class="table table-striped table-bordered">
                              <thead>
                              <tr align="left" style="padding-top:10px">
                                <th>订单编号</th>
                                <th>下单时间</th>
                                <th>卖家</th>
                                <th>付款金额(元)</th>
                                <th>订单状态</th>
                                <th>详细信息</th>
                              </tr>
                              </thead>
                              <tbody>
                              <% for (var i in trade_data) { %>
                              <tr>
                                <td><%= trade_data[i].orderID %></td>
                                <td><%= trade_data[i].orderTime %></td>
                                <td><%= trade_data[i].seller %></td>
                                <td><%= trade_data[i].orderAmount %></td>
                                <td><%= trade_data[i].orderStatus %></td>
                                <td><a href='/orderdetails?userID=<%= UserID %>&orderID=<%= trade_data[i].orderID %> '><input class='btn btn-info btn-small' type="submit" value="详细信息"/></a></td>
                              </tr>
                              <% } %>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>

              </div>
            </div>
          </div>

        <!-- footer content -->
        <footer>
          <div class="pull-right">
            Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
          </div>
          <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
      </div>
