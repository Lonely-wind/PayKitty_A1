    <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.11/js/dataTables.bootstrap.min.js"></script>
    <script src="http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js"></script>
        <script>
              $('#datetimepicker1').datetimepicker({
                format: 'yyyy/MM/dd',
                language: 'en',
                pickDate: true,
                pickTime: true,
                hourStep: 1,
                minuteStep: 15,
                secondStep: 30,
                inputMask: true
              });
        </script>
        <script>
              $('#datetimepicker2').datetimepicker({
                format: 'yyyy/MM/dd',
                language: 'en',
                pickDate: true,
                pickTime: true,
                hourStep: 1,
                minuteStep: 15,
                secondStep: 30,
                inputMask: true
              });
               $("#myselector").find("option[text='<%= search.state %>']").attr("selected",true);
        </script>

        <script>
              $('#datatable').dataTable({
                "searching":false,
                language: {
                  url: '//cdn.datatables.net/plug-ins/1.10.11/i18n/Chinese.json'
                }
              });
        </script>
  </body>
