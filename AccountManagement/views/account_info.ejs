<script type="text/javascript">
        function change(button,buttonid,textid){
            var text=document.getElementById(textid);
            //var button=document.getElementById("changephonebutton").value;
            //alert(button);
            if(button=="修改"){
                text.removeAttribute("readOnly");
                document.getElementById(textid).style.border="1px solid gray";
                document.getElementById(buttonid).innerHTML="完成";
            }
            else if(button=="完成"){
                text.setAttribute("readOnly",'true');
                document.getElementById(textid).style.border="none";
                document.getElementById(buttonid).innerHTML="修改";
                var form =  document.getElementById("personinfo_form");
                form.submit();
            }
           // alert("hello");
        }
        function checkamount(){
            var remain = <%= Balance %>;
            var trans = document.getElementById('transamount').value;
            var remain_float = parseFloat(remain);
            var trans_float = parseFloat(trans);
            var form = document.getElementById("transfer_form");
            
            console.log(trans);
            console.log(remain);console.log(trans_float);
            console.log(remain_float);
            if(trans_float > remain_float){
              alert("金额不足");
            }
            else{
              form.submit();
            }
        }
        function onSearch(obj,obj1,obj2,obj3){
            var storeId = document.getElementById('store');  
            var rowsLength = storeId.rows.length;  
            var key = obj.value;  
            var key1 = obj1.value;
            var times = 0;
            var sum = 0;

            var searchCol = 0;
            var searchCol1 = 3;
            var searchCol2 = 2; 
    
            for(var i=0;i<rowsLength;i++){  
                var searchText = storeId.rows[i].cells[searchCol].innerHTML;  
                var searchText1 = storeId.rows[i].cells[searchCol1].innerHTML;
            
                if(searchText.match(key) && searchText1.match(key1)){  
                    storeId.rows[i].style.display='';
                    times++;
                    var cost = storeId.rows[i].cells[searchCol2].innerHTML;
                    sum = parseInt(sum) + parseInt(cost);
                }else{  
                    storeId.rows[i].style.display='none';  
                }  
            }
            obj2.value = sum;
            obj3.value = times;  
        }

        function firm() {
          console.log("firm()");
          if(confirm("确认注销账户？")){
              location.href="delete";
          }
        }

</script>
